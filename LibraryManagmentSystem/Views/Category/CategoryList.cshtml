@model IEnumerable<Category>

@{
    ViewData["Title"] = "Kategori Listesi";
}

<h2 class="my-4">Kategori Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kaetgori No</th> 
            <th>Kategori Adı</th> 
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="/Category/UpdateCategory?id=@category.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/Category/DeleteCategory?id=@category.Id" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>